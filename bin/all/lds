#!/usr/bin/env bash

set -eo 'pipefail'

repo="$HOME/Repos/laravel-docs"

[ ! -d "$repo" ] && git clone https://github.com/laravel/docs "$repo"
cd "$repo"

git fetch --all
git branch -a | sed 's/* //' | awk '{$1=$1};1' | sed 's#remotes/[^/]*/##' | fzf | xargs git checkout

file=$(mktemp --suffix=.md)
cat ./* >"$file"

nvim -R "$file"
