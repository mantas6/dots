#!/usr/bin/env sh
# Update hosts block list for dnsmasq

set -e

url="https://raw.githubusercontent.com/StevenBlack/hosts/master/hosts"
outfile="$HOME/hosts.blocklist"

tmpfile=$(mktemp)

curl -fsSL "$url" -o "$tmpfile"

# validation
stat -f "%z" "$tmpfile"

cp -f "$tmpfile" "$outfile"

rm "$tmpfile"
