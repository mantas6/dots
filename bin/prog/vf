#!/usr/bin/env sh
# Select and edit a desired file

set -e

dir=.
files_cmd='find . -type f'
opts="$FZF_DEFAULT_OPTS"
preview_and_exit=false

while getopts 'd:go:hp' opt; do
  case ${opt} in
    d)
        dir="${OPTARG}"
        ;;
    g)
        files_cmd='git ls-files --others --cached --exclude-standard'
        ;;
    o)
        opts="$opts ${OPTARG}"
        ;;
    p)
        preview_and_exit=true
        ;;
    h)
        echo "$(basename "$0") [-g] [-d directory] [fragment]..."
        exit 0
        ;;
    ?)
      echo "Invalid option: -${OPTARG}."
      exit 1
      ;;
  esac
done

shift $((OPTIND - 1))

cd "$dir"

files=$($files_cmd)

for fragment in "$@"
do
    files=$(echo "$files" | grep "$fragment")
done

export FZF_DEFAULT_OPTS="$opts"

selected=$(echo "$files" | sed 's|^./||' | fzf --preview "bat --color=always {}" \
    --preview-window "~3" \
    --select-1)

if $preview_and_exit; then
    bat "$selected"
    exit 0
fi

"$EDITOR" "$selected"
