#!/usr/bin/env sh

set -e

interactive=''
no_add=''
optional_changes=''
sync=''
msg=''

while getopts ':inNsm:' opt; do
  case ${opt} in
    i)
        interactive=1
        ;;
    n)
        no_add=1
        ;;
    N)
        optional_changes=1
        ;;
    s)
        sync=1
        ;;
    m)
        msg=${OPTARG}
        ;;
    ?)
      echo "Invalid option: -${OPTARG}."
      exit 1
      ;;
  esac
done

if [ -z "$(git status --porcelain)" ]; then
    if [ -n "$optional_changes" ]; then
        gum log --level=info 'No changes are present'
        exit 0
    fi

    gum log --level=error 'No changes are present' >&2
    exit 1
fi

if [ -z "$msg" ]; then
    if [ -n "$interactive" ]; then
        msg=$(git log -n 100 --pretty=%B | sed '/^\s*$/d' | fzf)
    else
        msg=$(gum input --placeholder 'Commit message' --value="$(git log -1 --pretty=%B)")
    fi
fi

echo "$msg"

[ -z "$no_add" ] && git add .

git commit -m "$msg"
[ -n "$sync" ] && git pull --no-edit
git push
