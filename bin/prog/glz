#!/usr/bin/env sh

set -e

interactive=false
add=true

while getopts 'in' opt; do
  case ${opt} in
    i)
        interactive=true
        ;;
    n)
        add=false
        ;;
    ?)
      exit 1
      ;;
  esac
done

if [ -z "$(git status --porcelain)" ]; then
    gum log --level=error 'No changes are present' >&2
    exit 1
fi

if $add; then
    git add .
    git diff --staged
fi

last_msg=$(git log -1 --pretty=%B)

if $interactive; then
    msg=$(git log -n 100 --pretty=%B | sed '/^\s*$/d' | fzf)
else
    msg=$(gum input --placeholder 'Commit message' --value="$last_msg")
fi

echo "$msg"

git commit -m "$msg"
git push
