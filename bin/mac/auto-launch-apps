#!/usr/bin/env bash

terminal() {
    open -n "$HOME/Applications/Ghostty.app"
}

browser() {
    open -n "/Applications/Google Chrome.app"
}

await_windows() {
    local count
    count=$(aerospace list-windows --workspace focused --count)
    while [ "$count" -lt "$1" ]; do
        sleep 0.1
    done
}

workspace() {
    aerospace workspace "$1"

    local count
    count=$(aerospace list-windows --workspace focused --count)

    [ "$count" -ne 0 ] && return 1

    return 0
}

if aerospace workspace 1; then
    terminal
    browser
    await_windows 2
fi

if aerospace workspace 2; then
    open -n "/Applications/Microsoft Teams.app"
    browser
    await_windows 2
fi

if aerospace workspace 3; then
    browser
    browser
    await_windows 2
fi
