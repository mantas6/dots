{
    "$schema": "https://opencode.ai/config.json",
    "theme": "tokyonight",
    "autoupdate": "notify",
    "default_agent": "plan",
    // "enabled_providers": [
    //     "anthropic"
    // ],
    // "mode": {
    //     "build": {
    //         "prompt": "You are Claude Code, Anthropic's official CLI for Claude."
    //     },
    //     "plan": {
    //         "prompt": "You are Claude Code, Anthropic's official CLI for Claude."
    //     }
    // },
    "plugin": [
        "opencode-anthropic-auth@latest"
    ],
    "permission": {
        "bash": {
            "*": "allow",
            "git push*": "deny",
            "ssh*": "deny",
            "scp*": "deny",
            "rsync*": "deny",
            "gpg*": "deny",
        },
        "external_diretory": {
            "*": "deny",
            "~/Repos/*": "ask",
            "~/Downloads/*": "ask",
        },
    },
    "keybinds": {
        "app_exit": "<leader>q",
        "editor_open": "<leader>ctrl+e",
        "input_submit": "return,ctrl+m",
        "input_delete_to_line_start": "none",
        "messages_page_up": "pageup,ctrl+b",
        "messages_page_down": "pagedown,ctrl+f",
        "messages_half_page_up": "ctrl+u",
        "messages_half_page_down": "ctrl+d",
        "messages_last": "ctrl+g,end",
        "messages_first": "ctrl+o,home",
        // "messages_next": "ctrl+]",
        // "messages_previous": "ctrl+[",
        "history_previous": "ctrl+p",
        "history_next": "ctrl+n",
        "command_list": "<leader>p",
        "input_delete": "delete,shift+delete",
    }
}
